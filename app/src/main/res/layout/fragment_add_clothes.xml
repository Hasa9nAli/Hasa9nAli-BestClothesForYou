<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/icon_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/space_24"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_title_add_new_clothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_small"
        android:text="Add New Clothes"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="@+id/icon_back"
        app:layout_constraintStart_toEndOf="@+id/icon_back"
        app:layout_constraintTop_toTopOf="@+id/icon_back" />

    <ImageView
        android:id="@+id/image_view_upload_image"
        style="style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_38"
        android:background="@drawable/background_raduis"
        android:padding="46dp"
        android:src="@drawable/icon_camera"
        app:circularflow_radiusInDP="12dp"
        app:layout_constraintEnd_toEndOf="@+id/text_view_title_add_new_clothes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title_add_new_clothes" />

    <TextView
        android:id="@+id/text_view_title_card_add_new_clothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="T-Shirt Black"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toEndOf="@+id/image_view_upload_image"
        app:layout_constraintTop_toTopOf="@+id/image_view_upload_image" />

    <TextView
        android:id="@+id/text_view_category_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="Category"
        android:textColor="@color/on_background_37"
        app:layout_constraintStart_toStartOf="@+id/text_view_title_card_add_new_clothes"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title_card_add_new_clothes" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:text="Range"
        android:textColor="@color/on_background_37"
        app:layout_constraintStart_toStartOf="@+id/text_view_category_upload"
        app:layout_constraintTop_toBottomOf="@+id/text_view_category_upload" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_24"
        android:text="Add New Clothes"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@+id/image_view_upload_image"
        app:layout_constraintTop_toBottomOf="@+id/image_view_upload_image" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_field"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:background="@drawable/background_raduis"
        android:hint="Choose a name for your piece"
        android:padding="@dimen/spacing_tiny"
        android:textColorHint="@color/text_color_37"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="Add New Clothes"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_field"
        android:layout_marginHorizontal="@dimen/spacing_medium"
        android:background="@color/field_background"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="16dp">

        <Spinner
            android:id="@+id/spinner_clothes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/field_background"
            android:outlineSpotShadowColor="@color/field_background"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:contentDescription="@string/dropdown"
            android:src="@drawable/icon_down" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose the season of this clothes"
        android:textColor="@color/text_color"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />



</androidx.constraintlayout.widget.ConstraintLayout>